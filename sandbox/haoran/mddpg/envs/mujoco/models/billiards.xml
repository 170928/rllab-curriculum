<mujoco>
  <compiler inertiafromgeom="true" angle="degree" coordinate="local" />
  <option timestep="0.1" />
  <default>
    <joint limited='true' damping='0' armature='0' />
    <geom contype='1' conaffinity='1' condim='1' rgba='0.8 0.6 .4 1' margin="0.001" solref=".02 1" solimp=".8 .8 .01" material="geom" />
    <motor ctrlrange='-.4 .4' ctrllimited='true' />
  </default>

  <asset>
    <texture type="skybox" builtin="gradient" width="100" height="100" rgb1="1 1 1" rgb2="0 0 0" />
    <texture name="texgeom" type="cube" builtin="flat" mark="cross" width="127" height="1278" rgb1="0.8 0.6 0.4" rgb2="0.8 0.6 0.4" markrgb="1 1 1" random="0.01" />
    <texture name="texplane" type="2d" builtin="gradient" rgb1="0 0.3 0" rgb2="0 0.8 0" width="100" height="100" />
    <material name='MatPlane' texture="texplane" shininess="1" texrepeat="10 10" specular="1"  reflectance="0.5" />
    <material name='geom' texture="texgeom" texuniform="true" />
  </asset>

  <worldbody>
    <!-- floor -->
    <light directional="true" cutoff="100" exponent="1" diffuse="1 1 1"
      specular=".1 .1 .1" pos="0 0 1.3" dir="-0 0 -1.3" />
    <geom name='floor' material="MatPlane" pos='0 0 0' size='400 400 400'
      type='plane' conaffinity='1' rgba='0.8 0.9 0.8 1' condim='3' />

    <!-- billiards -->
    <body name="ball_0" pos="2 0 0.3">
      <joint type="free" limited='false'/>
      <geom type="sphere" pos="0 0 0" size="0.3"/>
    </body>
    <body name="ball_1" pos="-2 0 0.3">
      <joint type="free" limited='false'/>
      <geom type="sphere" pos="0 0 0" size="0.3"/>
    </body>
    <body name="ball_2" pos="0 2 0.3">
      <joint type="free" limited='false'/>
      <geom type="sphere" pos="0 0 0" size="0.3"/>
    </body>
    <body name="ball_3" pos="0 -2 0.3">
      <joint type="free" limited='false'/>
      <geom type="sphere" pos="0 0 0" size="0.3"/>
    </body>
    <body name="ball_4" pos="2 -2 0.3">
      <joint type="free" limited='false'/>
      <geom type="sphere" pos="0 0 0" size="0.3"/>
    </body>
    <body name="ball_5" pos="-2 -2 0.3">
      <joint type="free" limited='false'/>
      <geom type="sphere" pos="0 0 0" size="0.3"/>
    </body>
    <body name="ball_6" pos="-2 2 0.3">
      <joint type="free" limited='false'/>
      <geom type="sphere" pos="0 0 0" size="0.3"/>
    </body>
    <body name="ball_7" pos="2 2 0.3">
      <joint type="free" limited='false'/>
      <geom type="sphere" pos="0 0 0" size="0.3"/>
    </body>

    <!-- box -->
    <body name="box" pos="0 0 0">
      <joint name="box_slide_x" type='slide' pos='0 0 0' axis='1 0 0'
        limited='true' range='-2 2' armature='0'/>
      <joint name="box_slide_y" type='slide' pos='0 0 0' axis='0 1 0'
        limited='true' range='-2 2'/>
      <geom name='box_edge_south' type='box' pos='0 -4 1' size='5 1 1'
        friction='1 0 0' rgba='0.5 0.5 0.5 0.5'/>
      <geom name='box_edge_east' type='box' pos='4 0 1' size='1 3 1'
        friction='1 0 0' rgba='0.5 0.5 0.5 0.5'/>
      <geom name='box_edge_north' type='box' pos='0 4 1' size='5 1 1'
        friction='1 0 0' rgba='0.5 0.5 0.5 0.5'/>
      <geom name='box_edge_west' type='box' pos='-4 0 1' size='1 3 1'
        friction='1 0 0' rgba='0.5 0.5 0.5 0.5'/>
    </body>
  </worldbody>

  <actuator>
      <motor joint="box_slide_x" gear='10000' ctrlrange='-100 100'
        ctrllimited="true"/>
      <motor joint="box_slide_y" gear='10000' ctrlrange='-100 100'
        ctrllimited="true"/>
  </actuator>
</mujoco>
