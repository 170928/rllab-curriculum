<mujoco model='planar hopper'>
    <compiler inertiafromgeom='true' coordinate='local' angle='degree'/>

    <default>
        <joint islimited='true' damping='.01' compliance='1e-2' timeconst='1e-2'
               armature='.1' stiffness='8'/>
        <geom compliance='1e-2' timeconst='1e-2' contype='1' conaffinity='0'
              condim='3' friction='.4 .1 .1' rgba='0.8 0.6 .4 1'/>
        <act-motor ctrlrange='-1 1' isctrllimited='true'/>
    </default>

    <size nstack='300000' ngeom_user='1'/>

    <option timestep='0.008' gravity='0 0 -10'/>

    <body>
        <geom name='ground' type='plane' conaffinity='1' pos='0 0 0'
              size='40 40 40' rgba='0.9 0.9 0.9 1'/>
        <body name='torso' pos='0 0 1'>
            <joint name='rootx' type='slide' pos='0 0 0' axis='1 0 0'
                   islimited='false' damping='0' armature='0' stiffness='0'/>
            <joint name='rootz' type='slide' pos='0 0 0' axis='0 0 1'
                   islimited='false' damping='0' armature='0' stiffness='0'/>
            <joint name='rooty' type='hinge' pos='0 0 0' axis='0 1 0'
                   islimited='false' damping='0' armature='0' stiffness='0'/>
            <geom name='torso' type='capsule' fromto='0 0 -.05 0 0 .2'
                  size='0.056'/>
            <geom name='nose' type='capsule' fromto='.08 0 .13 .15 0 .14'
                  size='0.03'/>
            <!-- <site name='tip'  pos='.15 0 .11'/> -->

            <body name='ltorso' pos='0 0 -.05'>
                <joint name='waist' type='hinge' pos='0 0 0' axis='0 1 0'
                       range='-30 30'/>
                <geom name='ltorso' type='capsule' fromto='0 0 0 0 0 -.15'
                      size='0.06'/>
                <body name='uleg' pos='0 0 -.2'>
                    <joint name='hip' type='hinge' pos='0 0 0' axis='0 1 0'
                           range='-170 10'/>
                    <geom name='uleg' type='capsule' fromto='0 0 0 0 0 -.33'
                          size='0.04' rgba='0.9 0.6 0.6 1'/>
                    <body name='lleg' pos='0 0 -.33'>
                        <joint name='knee' type='hinge' pos='0 0 0' axis='0 1 0'
                               range='5 150'/>
                        <geom name='leg' type='capsule' fromto='0 0 0 0 0 -.32'
                              size='0.03' rgba='0.9 0.6 0.6 1'/>
                        <body name='foot' pos='0 0 -.32'>
                            <joint name='ankle' type='hinge' pos='0 0 0'
                                   axis='0 1 0' range='-45 45'/>
                            <geom name='lfoot' type='capsule'
                                  fromto='-.08 0 0 .17 0 0' size='0.04'
                                  rgba='0.6 0.9 0.6 1'/>
                        </body>
                    </body>
                </body>
            </body>
        </body>
    </body>

    <actuator>
        <motor name='waist' joint='waist' gear='30'/>
        <motor name='hip' joint='hip' gear='30'/>
        <motor name='knee_y' joint='knee' gear='20'/>
        <motor name='ankle_y' joint='ankle' gear='10'/>
        <!-- <motor name='shoulder' joint='shoulder' gear='100'/> -->
    </actuator>


    <textfield>
        <text name='cost' data='features.xml'/>
    </textfield>

</mujoco>
