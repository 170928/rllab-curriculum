<mujoco model="swimmer">
  <compiler inertiafromgeom="true" angle="degree" coordinate="local" />
  <option timestep="0.001" viscosity="1000" collision="predefined" integrator="Euler">
    <flag warmstart="disable" />
  </option>
  <default>
    <geom contype='1' conaffinity='1' condim='1' rgba='0.8 0.6 .4 1' 
      margin="0.001" solref=".02 1" solimp=".8 .8 .01" material="geom"/>
    <!--<joint armature='1'  />-->
  </default>
    <asset>
        <material name='trans_geom' />
        <texture name="groundplane" type="2d" builtin="gradient" random=".08" rgb1="0.25 0.64 0.85" rgb2="0.2 0.6 0.85" width="200" height="10" mark="random" markrgb=".8 .8 .8"/>

        <material name="MatGnd" texture="groundplane" texscale="1 .6" specular="1" shininess="1" reflectance="0.00001"/>

    </asset>

	<worldbody>
	
    <geom name='floor' material="MatGnd" pos='0 0 -0.1' size='40 40 0.1' type='plane' conaffinity='1'  rgba='0.8 0.9 0.8 1' condim='3'/>
		<!--  ================= SWIMMER ================= /-->

    <body name="front" pos="0 0 0">
      <geom type="capsule" fromto="0 0 0 1 0 0" size="0.1" density="10000" />
      <joint pos="0 0 0" type="slide" name="slider1" axis="1 0 0" armature="0" damping="1" />
      <joint pos="0 0 0" type="slide" name="slider2" axis="0 1 0" armature="0" damping="1" />
      <joint name="rot" type="hinge" pos="0 0 0" axis="0 0 1" armature="0" damping="1" />

      <body name="mid" pos="1 0 0">
        <geom type="capsule" fromto="0 0 0 1 0 0" size="0.1" density="10000" />
        <joint name="rot2" type="hinge" pos="0 0 0" axis="0 0 1" range="-100 100" limited="true" />
        <body name="back" pos="1 0 0">
          <geom type="capsule" fromto="0 0 0 1 0 0" size="0.1" density="10000" />
          <joint name="rot3" type="hinge" pos="0 0 0" axis="0 0 1" range="-100 100" limited="true" />
        </body>
      </body>
    </body>	
	</worldbody>

  <actuator>
    <motor joint="rot2" ctrlrange="-500 500" ctrllimited="true"/>
    <motor joint="rot3" ctrlrange="-500 500" ctrllimited="true"/>
  </actuator>
  <asset>
	        <texture type="skybox" builtin="gradient" width="100" height="100" rgb1=".4 .6 .8" 
            rgb2="0 0 0"/>  
        <texture name="texgeom" type="cube" builtin="flat" mark="cross" width="127" height="1278" 
            rgb1="0.8 0.6 0.4" rgb2="0.8 0.6 0.4" markrgb="1 1 1" random="0.01"/>  
        <texture name="texplane" type="2d" builtin="checker" rgb1=".2 .3 .4" rgb2=".1 0.15 0.2" 
            width="100" height="100"/>  

        <material name='MatPlane' reflectance='0.5' texture="texplane"/>
        <material name='geom' texture="texgeom" texuniform="true"/>
    </asset>
</mujoco>
