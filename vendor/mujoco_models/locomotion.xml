<mujoco model="locomotion">
  <compiler inertiafromgeom="true" angle="radian" coordinate="local"/>
  <option timestep="0.002" gravity="0 0 -9.8" iterations='20'/>
  <visual>
    <map fogstart="3" fogend="5"/>
  </visual>

	<size nuser_geom='1' nkey='5'/>
  <default>
    <joint armature='0.04' damping=".1" limited="true" />
    <geom friction=".8 .8 .1" margin="0.002" condim="3" contype="1" conaffinity="1" density="100"/>
  </default>
  <worldbody>
    <light directional='false' diffuse='.8 .8 .8' specular='0.3 0.3 0.3' pos='0 0 4.5' dir='0 0 -1'/>
    <geom name="groud_box" pos="0 0 -0.83" material="MatPlane" rgba="0.2 0.2 0.2 1" type="plane" size="10.0 10.0 1" condim='3' />
    <body name="lower_body_frame" pos="0 0 0.23">

      <geom name="body1" type="capsule" fromto="0 0 -0.1 0 0 0.3" size="0.001"/>
      
      <joint name="lower_body_slide_fb" type="slide" pos="0 0 0" axis="0 1 0" limited="false"/>
      <joint name="lower_body_slide_ud" type="slide" pos="0 0 0" axis="0 0 1" limited="false"/>
      <joint name="lower_body_rotation" type="hinge" pos="0 0 0" axis="1 0 0" range="-0.1 0.1"/>

      <joint name="lower_body_turn" type="hinge" pos="0 0 0" axis="0 0 1" range="-6.3 6.3"/>
      <joint name="lower_body_shake" type="hinge" pos="0 0 0" axis="0 1 0" range="-1.57 1.57"/>
      <joint name="lower_body_lr" type="slide" pos="0 0 0" axis="1 0 0" limited="false"/>

      <body name="lower_body" pos="0 0 0">
        <geom name="body" type="capsule" fromto="0 0 -0.1 0 0 0.3" size="0.10"/>

        <body name="r_thigh_link" pos="0.07 0 0">
          <geom name="rt" type="capsule" fromto="0 0 -0.5 0 0 0" size="0.06" contype="0" conaffinity="0"/>
        
          <joint name="r_thigh_joint_fb" type="hinge" pos="0 0 0" axis="1 0 0" range="-0.5236 1.3963"/>
          <joint name="r_thigh_joint_lr" type="hinge" pos="0 0 0" axis="0 1 0" range="-1.0 1.0"/>

          <body name="r_calf_frame" pos="0 0 -0.5">
            <body name="r_calf_link" pos="0 0 0">
              <geom name="rc" type="capsule" fromto="0 0 -0.5 0 0 0" size="0.06"/>
            
              <joint name="r_calf_joint" type="hinge" pos="0 0 0" axis="1 0 0" range="-1.3963 0"/>
              
              <body name="r_foot_link" pos="0 0 -0.5">
                <geom name="rf" type="capsule" fromto="0 0 0 0 0.2 0" size="0.06"/>
              
                <joint name="r_foot_joint" type="hinge" pos="0 0 0" axis="1 0 0" range="-1.3213 0.5"/>
              </body>
            </body>
          </body>
        </body>

        <body name="l_thigh_link" pos="-0.07 0 0">
          <geom name="lt" type="capsule" fromto="0 0 -0.5 0 0 0" size="0.06" contype="0" conaffinity="0"/>
          
          <joint name="l_thigh_joint_fb" type="hinge" pos="0 0 0" axis="1 0 0" range="-0.5236 1.3963"/>
          <joint name="l_thigh_joint_lr" type="hinge" pos="0 0 0" axis="0 1 0" range="-1.0 1.0"/>

          <body name="l_carf_frame" pos="0 0 -0.5">

            <body name="l_calf_link" pos="0 0 0">
              <geom name="lc" type="capsule" fromto="0 0 -0.5 0 0 0" size="0.06"/>
              
              <joint name="l_calf_joint" type="hinge" pos="0 0 0" axis="1 0 0" range="-1.3963 0"/>

              <body name="l_foot_link" pos="0 0 -0.5">
                <geom name="lf" type="capsule" fromto="0 0 0 0 0.2 0" size="0.06"/>
                
                <joint name="l_foot_joint" type="hinge" pos="0 0 0" axis="1 0 0" range="-1.3213 0.5"/>
              </body>
            </body>
          </body>
        </body>
      </body>
    </body>

  </worldbody>
  <actuator>
    <motor joint="r_thigh_joint_fb" ctrlrange="-25.0 25.0" ctrllimited="true"/>
    <motor joint="r_calf_joint" ctrlrange="-20.0 20.0" ctrllimited="true"/>
    <motor joint="r_foot_joint" ctrlrange="-20.0 20.0" ctrllimited="true"/>
    <motor joint="l_thigh_joint_fb" ctrlrange="-25.0 25.0" ctrllimited="true"/>
    <motor joint="l_calf_joint" ctrlrange="-20.0 20.0" ctrllimited="true"/>
    <motor joint="l_foot_joint" ctrlrange="-20.0 20.0" ctrllimited="true"/>
  </actuator>

  <asset>
    <texture type="skybox" builtin="gradient" width="100" height="100" rgb1=".4 .6 .8" 
        rgb2="0 0 0"/>  
    <texture name="texgeom" type="cube" builtin="flat" mark="cross" width="127" height="1278" 
        rgb1="0.8 0.6 0.4" rgb2="0.8 0.6 0.4" markrgb="1 1 1" random="0.01"/>  
    <texture name="texplane" type="2d" builtin="checker" rgb1=".2 .3 .4" rgb2=".1 0.15 0.2" 
        width="100" height="100"/>  

    <material name='MatPlane' reflectance='0.5' texture="texplane"/>
    <material name='geom' texture="texgeom" texuniform="true"/>
  </asset>

</mujoco>
