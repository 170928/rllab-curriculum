<mujoco model="arm">
	<compiler angle="degree" inertiafromgeom="true" coordinate="local"/>
	<default>
		<joint damping="0.0" armature="0.0"/>
		<geom contype="0" friction="1 0.1 0.1" rgba="0.7 0.7 0 1" />
		<act-position ctrllimited='false' forcelimited='false' kp='5.0'/>
		<site group='0' rgba='1. 0. 0. 1.'/>
	</default>

    <option timestep="0.05" gravity="0 0 0" />

	<size nstack="8000" nuserdata="3" nkey="1" />

	<body>     
		<site name="target" pos="0 0 2" group='1' rgba='1. 0. 0. 1.'/>         

		<geom name="floor" pos="0 0 0" size="4 4 4" type="plane"  rgba=".8 .9 .8 1"/>
		<body name="upper_arm" pos="0 0 1">
			<joint name="shoulder" type="hinge" pos="0 0 0" axis="1 0 0" />
			<geom name="upper_arm" type="capsule" fromto="0 0 0 0 0 0.5" size="0.049 0.3" rgba="0 0.7 0.7 1" />
			<body name="lower_arm" pos="0 0 .5">
				<joint name="elbow" type="hinge" pos="0 0 0" axis="1 0 0"/>
				<geom name="lower_arm" type="capsule" fromto="0 0 0 0 1e-6 0.5" size="0.049 0.3" rgba="0 0.7 0.7 1" />
				<site name="tip" pos="0 0 0.5" group='0' rgba='1. 0. 0. 1.'/>
			</body>
		</body>
	</body>

 	<actuator>
		<position name="shoulder" joint="shoulder" />
		<position name="elbow" joint="elbow" />
	</actuator>
</mujoco>
